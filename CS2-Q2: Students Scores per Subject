# FA4.py

# Ask for number of students and subjects
num_students = int(input("Enter number of students: "))
num_subjects = int(input("Enter number of subjects: "))

# Variable to accumulate the overall class total
class_total = 0  

for student in range(1, num_students + 1):
    print(f"\nStudent {student}")
    
    student_total = 0  # accumulator for each student
    
    # Nested loop for subject scores
    for subject in range(1, num_subjects + 1):
        score = float(input(f"Enter score {subject}: "))
        student_total += score
    
    # Compute student average
    student_average = student_total / num_subjects
    print(f"Average for Student {student} = {student_average:.1f}")
    
    # Add to class total
    class_total += student_average

# Compute class average
class_average = class_total / num_students

print(f"\nClass Average = {class_average:.1f}")
