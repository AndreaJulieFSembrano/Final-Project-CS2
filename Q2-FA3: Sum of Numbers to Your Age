# CS2_Section_Surname_2QFunWithNumbers.py

# Ask the user for their age
age = int(input("Hi there! Please enter your age: "))

# Variable to accumulate the sum
total_sum = 0

# Loop from 1 up to the user's age
for i in range(1, age + 1):
    total_sum += i

# Display the result
print(f"\nThe sum of all numbers from 1 to {age} is: {total_sum}")
